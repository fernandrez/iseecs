<%- include partials/header.ejs %>
<%- include partials/site-metatags.ejs %>
<%- include partials/navigation.ejs %>
<div class="container">
  <% if(parent && parent.parent) { %>
  <a href="/site/<%= parent.parent.codigo %>"><%= __(parent.parent.titulo) %></a>
  <% }
  if(parent) { %>
  <h1 class="titulo text-center"><%= __(parent.titulo) %></h1>
  <h2 class="descripcion text-center"><%- __(parent.descripcion) %></h2>
  <% } %>
  <div class="row-fluid clearfix">
    <div class="col-xs-6 text-center">
      <h3>Argentina</h3>
      <div class="col-xs-6 text-center">
        <h3>Sell
          <span class="on on-off api-trigger" data-url="/local/enable/ar/sell">i</span>
          <span class="off on-off api-trigger" data-url="/local/disable/ar/sell">o</span>
        </h3>
        <div class="row-fluid trigger-wrapper clearfix">
          <div class="api-trigger col-xs-1" data-url="/local/position/ar/sell/call">=</div>
          <div class="api-trigger col-xs-1" data-url="/local/position/ar/sell/0">0</div>
          <div class="api-trigger col-xs-1" data-url="/local/position/ar/sell/1">1</div>
          <div class="api-trigger col-xs-1" data-url="/local/position/ar/sell/2">2</div>
          <div class="api-trigger col-xs-1" data-url="/local/position/ar/sell/3">3</div>
          <div class="api-trigger col-xs-1" data-url="/local/position/ar/sell/5">5</div>
          <div class="api-trigger col-xs-1" data-url="/local/position/ar/sell/10">10</div>
          <div class="api-trigger col-xs-1" data-url="/local/position/ar/sell/15">15</div>
        </div>
      </div>
      <div class="col-xs-6 text-center">
        <h3>Buy
          <span class="on on-off api-trigger" data-url="/local/enable/ar/buy">i</span>
          <span class="off on-off api-trigger" data-url="/local/disable/ar/buy">o</span>
        </h3>
        <div class="trigger-wrapper">
          <div class="api-trigger col-xs-1" data-url="/local/position/ar/buy/call">=</div>
          <div class="api-trigger col-xs-1" data-url="/local/position/ar/buy/0">0</div>
          <div class="api-trigger col-xs-1" data-url="/local/position/ar/buy/1">1</div>
          <div class="api-trigger col-xs-1" data-url="/local/position/ar/buy/2">2</div>
          <div class="api-trigger col-xs-1" data-url="/local/position/ar/buy/3">3</div>
          <div class="api-trigger col-xs-1" data-url="/local/position/ar/buy/5">5</div>
          <div class="api-trigger col-xs-1" data-url="/local/position/ar/buy/10">10</div>
          <div class="api-trigger col-xs-1" data-url="/local/position/ar/buy/15">15</div>
        </div>
      </div>
    </div>
      <div class="col-xs-6 text-center">
        <h3>Colombia</h3>
        <div class="col-xs-6 text-center">
          <h3>Sell
            <span class="on on-off api-trigger" data-url="/local/enable/co/sell">i</span>
            <span class="off on-off api-trigger" data-url="/local/disable/co/sell">o</span>
          </h3>
          <div class="row-fluid trigger-wrapper">
            <div class="api-trigger col-xs-1" data-url="/local/position/co/sell/call">=</div>
            <div class="api-trigger col-xs-1" data-url="/local/position/co/sell/0">0</div>
            <div class="api-trigger col-xs-1" data-url="/local/position/co/sell/1">1</div>
            <div class="api-trigger col-xs-1" data-url="/local/position/co/sell/2">2</div>
            <div class="api-trigger col-xs-1" data-url="/local/position/co/sell/3">3</div>
            <div class="api-trigger col-xs-1" data-url="/local/position/co/sell/5">5</div>
            <div class="api-trigger col-xs-1" data-url="/local/position/co/sell/10">10</div>
            <div class="api-trigger col-xs-1" data-url="/local/position/co/sell/15">15</div>
          </div>
        </div>
      <div class="col-xs-6 text-center">
        <h3>Buy
          <span class="on on-off api-trigger" data-url="/local/enable/co/buy">i</span>
          <span class="off on-off api-trigger" data-url="/local/disable/co/buy">o</span>
        </h3>
          <div class="trigger-wrapper">
            <div class="api-trigger col-xs-1" data-url="/local/position/co/buy/call">=</div>
            <div class="api-trigger col-xs-1" data-url="/local/position/co/buy/0">0</div>
            <div class="api-trigger col-xs-1" data-url="/local/position/co/buy/1">1</div>
            <div class="api-trigger col-xs-1" data-url="/local/position/co/buy/2">2</div>
            <div class="api-trigger col-xs-1" data-url="/local/position/co/buy/3">3</div>
            <div class="api-trigger col-xs-1" data-url="/local/position/co/buy/5">5</div>
            <div class="api-trigger col-xs-1" data-url="/local/position/co/buy/10">10</div>
            <div class="api-trigger col-xs-1" data-url="/local/position/co/buy/15">15</div>
          </div>
        </div>
      </div>
  </div>
  <div class="row-fluid clearfix">
    <div class="api-trigger col-xs-1" data-url="/local/autorespond">Autorespond</div>
  </div>
  <div class="row-fluid clearfix">
    <div class="api-trigger col-xs-1" data-url="/local/monitor/on">On</div>
    <div class="api-trigger col-xs-1" data-url="/local/monitor/off">Off</div>
  </div>
</div>

<script>
  $(".api-trigger").on('click', (e) => {
    $.ajax({
      url: $(e.target).data('url'),
      success: data => { alert(data); }
    });
  })
</script>
